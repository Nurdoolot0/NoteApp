<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    android:orientation="vertical"
    tools:context=".ui.fragments.note.NoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginTop="19.71dp"
            android:layout_marginBottom="50sp"
            android:contentDescription="Menu"
            android:src="@drawable/ic_menu"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="Все заметки"
            android:textColor="#FFFFFF"
            android:textSize="56px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu_switch_icon"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_gravity="end"
            android:layout_marginStart="96sp"
            android:background="@drawable/grid_lay"
            android:contentDescription="Переключение вида"
            android:translationY="20sp" />

        <ImageView
            android:id="@+id/set_ic"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="-20sp"
            android:background="@drawable/ic_set"
            android:contentDescription="Переключение вида"
            android:translationY="20sp" />


        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_note"
            android:layout_width="370sp"
            android:layout_height="60dp"
            android:layout_marginStart="-362sp"
            android:layout_marginTop="66dp"
            android:background="@drawable/search_background"
            android:queryHint="Поиск заметок" />

    </LinearLayout>


    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="13sp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_btn"
            style="@style/MyFabStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="26dp"
            android:contentDescription="crazy"
            android:src="@drawable/ic_add"
            app:fabCustomSize="58dp" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</LinearLayout>